@model IEnumerable<SSST.Models.MataPelajaran>

@{
    ViewData["Title"] = "Index";
}

<h1>Daftar Mata Pelajaran</h1>

<p>
    <a asp-action="Create">Buat Baru</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MapelNama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MapelGrade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuruMapel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MapelNama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MapelGrade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuruMapel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MapelID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MapelID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MapelID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
