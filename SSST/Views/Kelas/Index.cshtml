@model IEnumerable<SSST.Models.Kelas>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KelasNama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KelasTahun)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guru)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KelasNama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KelasTahun)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guru.GuruID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.KelasID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.KelasID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.KelasID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
