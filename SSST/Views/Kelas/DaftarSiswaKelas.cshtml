@model SSST.Models.Kelas

@{
    ViewData["Title"] = "Index";
}

<h1>Daftar Siswa</h1>
<h3>Kelas : @Model.KelasNama</h3>
<h3>Wali  : @Model.Guru.GuruNama</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                Nama Siswa
            </th>
            <th>
                NIM Siswa
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Siswas) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SiswaNama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SiswaNim)
            </td>
            <td>
                <a asp-controller="Siswa" asp-action="InputNilaiSiswa" asp-route-id="@item.SiswaID">Input Nilai Siswa</a> |
                <a asp-controller="Siswa" asp-action="LihatNilaiSiswa" asp-route-id="@item.SiswaID">Lihat Nilai Siswa</a> |
                <a asp-controller="Siswa" asp-action="Edit" asp-route-id="@item.SiswaID">Pindah Kelas</a>
            </td>
        </tr>
}
    </tbody>
</table>
